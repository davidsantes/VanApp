<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TestUsuariosActivity"
    android:padding="10dip" >

    <ListView
        android:id="@+id/listViewUsuarios"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="1"/>

    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content" android:weightSum="6" android:gravity="bottom" android:layout_gravity="top" >
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:text="hello"/>
        <Button android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="4" android:text="hello"/>
        <Button android:id="@+id/btn_sign_out" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_weight="1" android:text="SignOut"/>
    </LinearLayout>
</LinearLayout>