<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".SplashActivity">

    <pl.droidsonroids.gif.GifImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/intro_car_gif"
        android:background="@color/colorBlanco"
        />

    <TextView
        android:id="@+id/tvTituloProgramaAnimado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="@dimen/tamanioLetraXXl"
        android:textColor="@color/colorNaranja"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        />

    <TextView
        android:id="@+id/tvFooter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/footer_version"
        android:textColor="@color/colorGrisOscuro"
        android:textSize="@dimen/tamanioLetraNormal"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true" />

</RelativeLayout>