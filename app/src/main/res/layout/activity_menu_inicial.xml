<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.Usuarios.UsuariosActivity">

    <include layout="@layout/menu_layout"/>

    <GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:rowCount="2"
        android:columnCount="2"
        android:alignmentMode="alignMargins">

        <ImageButton
            android:id="@+id/imageViewUsuarios"
            app:srcCompat="@drawable/ic_face"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="@android:color/white"
            android:tint="@color/colorPrimary"
            android:scaleType="fitCenter"/>

        <ImageButton
            app:srcCompat="@drawable/ic_directions_bus"
            android:id="@+id/imageViewCoches"
            android:layout_row="0"
            android:layout_column="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="@android:color/white"
            android:tint="@color/colorPrimary"
            android:scaleType="fitCenter"/>

        <ImageButton
            app:srcCompat="@drawable/ic_date_range"
            android:id="@+id/imageViewCalendario"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="@android:color/white"
            android:tint="@color/colorPrimary"
            android:scaleType="fitCenter"/>

        <ImageButton
            app:srcCompat="@drawable/ic_playlist_add_check"
            android:id="@+id/imageViewInformes"
            android:layout_row="1"
            android:layout_column="1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_columnWeight="1"
            android:layout_rowWeight="1"
            android:backgroundTint="@android:color/white"
            android:tint="@color/colorPrimary"
            android:scaleType="fitCenter"/>

    </GridLayout>

</LinearLayout>
